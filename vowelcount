#include<stdio.h>
#include<string.h>
#include<ctype.h>

int main() {
   char a[100];
   int i,n,count=0;
   scanf("%s",a);
   n=strlen(a);
   for(i=0;i<n;i++)
   {
       a[i]=tolower(a[i]);
   if(a[i]=='a' || a[i]=='e' || a[i]=='i' || a[i]=='o' || a[i]=='u' )
   {
       count++;
   }
   }
    printf("%d",count);
}
